
<% if @division.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading"><%= pluralize(@division.errors.count, "error") %> prohibited this division from being saved:!</h4>
    <ul>
        <% @division.errors.each do |error| %>
          <li class="mb-0"><%= error.full_message %></li>
        <% end %>
      </ul>
    <hr>
  <p class="mb-0">Please check and give proper inputs.</p>
</div>
    
  <% end %>
<%= form_with(model: @division) do |d| %>


<div class="mb-3 row">
    <%= d.label :name, "Name",{class:"form-label"} %>
    <%= d.text_field :name, {class:"form-control", placeholder:"Enter division name...", required: "true"} %>
</div>

<div class="mb-3 row">
<center>
    <%=d.submit(class:"btn btn-primary mb-3")%>
    </center>
</div>
<% end %>